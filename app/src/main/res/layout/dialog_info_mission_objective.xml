<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        android:orientation="vertical"
        android:padding="1dp">

        <TextView
            android:id="@+id/textInfoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textBackground"
            android:padding="5dp"
            android:text="@string/disruption_mission"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textInfoDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/disruption_description" />

                <TextView
                    android:id="@+id/textInfoRotations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/disruption_rotations"
                    android:visibility="gone" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/tableDisruption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/labelConduits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/conduit"
                        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
                        app:layout_constraintStart_toStartOf="@+id/tableLayout"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/labelRound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/round"
                        app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
                        app:layout_constraintEnd_toStartOf="@+id/tableLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tableLayout" />

                    <TableLayout
                        android:id="@+id/tableLayout"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/labelRound"
                        app:layout_constraintTop_toBottomOf="@+id/labelConduits">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="1"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="2"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="3"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="3"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="4"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="4"
                                android:textAlignment="center" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="1"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="4"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="A"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="3"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="A"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="A"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="B"
                                android:textAlignment="center" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="4"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="2"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="A"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView21"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="3"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="A"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView22"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="B"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView23"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="B"
                                android:textAlignment="center" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView24"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="3"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView25"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="A"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView48"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="3"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="B"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView49"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="4"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="B"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView50"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="C"
                                android:textAlignment="center" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView51"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="4+"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView52"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="4"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="B"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView53"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="B"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView54"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="C"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView55"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_column="3"
                                android:layout_span="1"
                                android:layout_weight="1"
                                android:background="@drawable/frame"
                                android:text="C"
                                android:textAlignment="center" />
                        </TableRow>
                    </TableLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textInfoEfficiency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/disruption_efficiency"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>